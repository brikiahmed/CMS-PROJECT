{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                    <h4 class="mb-sm-0">Article Manager</h4>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title mb-0">Add, Edit & Remove</h4>
                    </div>
                    <div class="card-body">
                        <div id="customerList">
                            <div class="row g-4 mb-3">
                                <div class="col-sm-auto">
                                    <div>
                                        <a type="button" class="btn btn-success add-btn" id="create-btn" href="{{ path('app_article_new') }}">
                                            <i class="ri-add-line align-bottom me-1"></i>
                                            Add Article</a>
                                    </div>
                                </div>
                                <div class="col-sm">
                                    <div class="d-flex justify-content-sm-end">
                                        <div class="search-box ms-2">
                                            <input type="text" class="form-control search" placeholder="Search..." id="searchInput">
                                            <i class="ri-search-line search-icon"></i>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="table-responsive table-card mt-3 mb-1">
                                <table class="table align-middle table-nowrap" id="customerTable">
                                    <thead class="table-light">
                                    <tr>
                                        <th class="sort" data-sort="id">ID</th>
                                        <th class="sort desc" data-sort="title">Title</th>
                                        <th class="sort" data-sort="author">Author</th>
                                        <th class="sort" data-sort="updated_by">Updated</th>
                                        <th class="sort" data-sort="created_at">Created on</th>
                                        <th class="sort" data-sort="updated_at">Updated on</th>
                                        <th class="sort" data-sort="action">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody class="list form-check-all">
                                    {% for article in articles %}
                                        <tr>
                                            <td class="id">{{ article.id }}</td>
                                            <td class="title">{{ article.title }}</td>
                                            <td class="author">{{ article.author }}</td>
                                            <td class="updated_by">{{ article.updatedBy }}</td>
                                            <td class="created_at">{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td class="updated_at">{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                            <td>
                                                <div class="d-flex gap-2">
                                                    <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">

                                                        <a class="btn btn-outline-success" href="{{ path('app_article_edit', {'id': article.id}) }}">
                                                            <i class="fa-solid fa-pen"></i>
                                                        </a>

                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                        <button class="btn btn-outline-danger">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </button>
                                                        <a class="btn btn-outline-info" href="{{ path('app_article_show', {'id': article.id}) }}">
                                                            <i class="fa-solid fa-eye"></i>
                                                        </a>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>

                                </table>

                                <div class="noresult" id="noresult" style="display: none">
                                    <div class="text-center">
                                        <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                                        <h5 class="mt-2">Sorry! No Result Found</h5>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-end">
                                <div class="pagination-wrap hstack gap-2">
                                    <a class="page-item pagination-prev disabled" href="#">
                                        Previous
                                    </a>
                                    <ul class="pagination listjs-pagination mb-0"></ul>
                                    <a class="page-item pagination-next" href="#">
                                        Next
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
    <script>
        var options = {
            valueNames: ['id', 'title', 'author', 'updated_by', 'created_at', 'updated_at']
        };
        var articleList = new List('customerTable', options);
        var searchBox = document.getElementById('searchInput');
        searchBox.addEventListener('keyup', function() {
            var results = articleList.search(searchBox.value, ['id', 'title', 'author', 'updated_by', 'created_at', 'updated_at']);
            var noResultsElement = document.getElementById('noresult');
            if (results.length === 0) {
                noResultsElement.style.display = 'block';
            } else {
                noResultsElement.style.display = 'none';
            }
        });
    </script>
{% endblock %}