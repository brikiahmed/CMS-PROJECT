{% extends 'base.html.twig' %}

{% block title %}Forms index{% endblock %}
{% block content %}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Listing Forms</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                    <li class="breadcrumb-item active">Listing Forms</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="row g-2">
            <div class="col-lg-auto">
                <div class="hstack gap-2">
                    <a href="{{ path('admin_form_new') }}"><button type="button" class="btn btn-primary waves-effect waves-ligh" ><i class="ri-add-fill me-1 align-bottom"></i>Create form</button></a>
                </div>
            </div>
            <div class="col-sm">
                <div class="d-flex justify-content-sm-end">
                    <div class="search-box ms-2">
                        <input type="text" class="form-control search" placeholder="Search..." id="searchInput">
                        <i class="ri-search-line search-icon"></i>
                    </div>
                </div>
            </div>

            <div class="col-auto order-2 order-sm-1 ms-auto">
                <div class="hstack gap-2">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <a href="{{ path('admin_form_index') }}"><button class="btn btn-icon fw-semibold btn-soft-danger"><i class="ri-arrow-go-back-line"></i></button></a>
                        <a href="{{ path('admin_form_new') }}"><button class="btn btn-icon fw-semibold btn-soft-success"><i class="ri-arrow-go-forward-line"></i></button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 grid-margin stretch-card  ">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tableForm" class="table align-middle table-nowrap table-striped-columns mb-0">
                        <thead class="table-light" >
                        <tr>
                            <th scope="col" style="width: 46px;">
                                <div class="form-check">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="cardtableCheck01">
                                        <label class="form-check-label" for="cardtableCheck01"></label>
                                    </div>
                                </div>

                            <th>{{ knp_pagination_sortable(pagination, 'Id', 'id') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Tile', 'title') }}</th>
                            <th>{{ knp_pagination_sortable(pagination, 'Active', 'isActive') }}</th>
                            <th scope="col" style="width: 150px;" >Actions</th>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="list form-check-all">
                        {% for cmsForm in pagination %}
                            <tr>
                                <td>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="cardtableCheck01">
                                        <label class="form-check-label" for="cardtableCheck01"></label>
                                    </div>
                                </td>
                                <td class="id">{{ cmsForm.id }}</td>
                                <td class="title">{{ cmsForm.title }}</td>
                                <td class="isEnabled">{{ cmsForm.isEnabled == 1 ? 'Is Active' : 'Not active'}}</td>
                                <td>
                                    <div class="container">
                                        <div class="btn">
                                            <a href="{{ path('admin_form_edit', {'id': cmsForm.id}) }}"><button class="btn btn-outline-success btn-border"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i></button></a>
                                        </div>
                                        <div class="btn">
                                            <form method="post" action="{{ path('app_forms_delete', {'id': cmsForm.id}) }}" onsubmit="return confirm('Are you sure you want to delete this form?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cmsForm.id) }}">
                                                <button class="btn btn-soft-danger btn-border">
                                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i>
                                                </button>
                                            </form>
                                        </div>

                                    </a>
                                    <a href="{{ path('admin_form_show', {'id': cmsForm.id}) }}"><button class="btn btn-outline-secondary btn-border"> <i class="ri-eye-fill align-bottom me-2 text-muted"></i></button></a>
                                    </div>
                                </td>

                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>

                    </table>
                    <div class="noresult" id="noresult" style="display: none">
                        <div class="text-center">
                            <lord-icon src="https://cdn.lordicon.com/msoeawqm.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:75px;height:75px"></lord-icon>
                            <h5 class="mt-2">Sorry! No Result Found</h5>
                        </div>
                    </div>
                    <br>
                    <div class="navigation text-center">
                        {% if pagination.getTotalItemCount  > 0 %}
                            {{ knp_pagination_render(pagination) }}
                        {% endif %}
                    </div>

                </div>

            </div>

        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}

    <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
    <script>
        var options = {
            valueNames: ['id', 'title', 'isEnabled']
        };
        var articleList = new List('tableForm', options);
        var searchBox = document.getElementById('searchInput');
        searchBox.addEventListener('keyup', function() {
            var results = articleList.search(searchBox.value, ['id', 'title', 'isEnabled']);
            var noResultsElement = document.getElementById('noresult');
            if (results.length === 0) {
                noResultsElement.style.display = 'block';
            } else {
                noResultsElement.style.display = 'none';
            }
        });
    </script>
{% endblock %}