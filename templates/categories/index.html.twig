{% extends 'base.html.twig' %}

{% block title %}Categories index{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                <h4 class="mb-sm-0">Listing Category</h4>

                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Category</a></li>
                        <li class="breadcrumb-item active">Listing Category</li>
                    </ol>
                </div>

            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-body">
            <div class="row g-2">
                <div class="col-lg-auto">
                    <div class="hstack gap-2">
                        <a href="{{ path('app_categories_new') }}"><button type="button" class="btn btn-primary waves-effect waves-ligh" ><i class="ri-add-fill me-1 align-bottom"></i>  Add Categories</button></a>
                    </div>
                </div>

                <div class="col-xxl-5 col-sm-9">
                    <div class="search-box">
                        <input type="text" class="form-control search bg-light border-light" placeholder="Search for category or something...">
                        <i class="ri-search-line search-icon"></i>
                    </div>
                </div>

                <div class="col-auto order-2 order-sm-1 ms-auto">
                    <div class="hstack gap-2">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a href="{{ path('app_categories_index') }}"><button class="btn btn-icon fw-semibold btn-soft-danger"><i class="ri-arrow-go-back-line"></i></button></a>
                            <a href="{{ path('app_categories_new') }}"><button class="btn btn-icon fw-semibold btn-soft-success"><i class="ri-arrow-go-forward-line"></i></button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 grid-margin stretch-card  ">
            <div class="card">
                <div class="card-body">
<div class="table-responsive">
    <table class="table align-middle table-nowrap table-striped-columns mb-0">
        <thead  class="table-light">
             <tr>
                 <th scope="col" style="width: 46px;">
                                    <div class="form-check">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="cardtableCheck01">
                                            <label class="form-check-label" for="cardtableCheck01"></label>
                                        </div>
                                <th scope="col">Id</th>
                                <th scope="col">Title</th>
                                <th scope="col">Sub Category</th>
                                <th scope="col">Author</th>
                                <th scope="col">Updated</th>
                                <th scope="col">created On</th>
                                <th scope="col">Updated On</th>
                                <th scope="col"style="width: 150px;" >Actions</th>
                  </th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td></td>
                <td>{{ category.id }}</td>
                <td>{{ category.title }}</td>
                <td>

                    {% for subcategory in subcategories %}

                        <li>
                            <input disabled type="checkbox" name="subcategory[]" value="{{ subcategory.id }}"
                                   {% if subcategory.id in category.getSelectedSubcategories()|keys  %}checked {% endif %}>
                            {{ subcategory.title }}
                        </li>

                    {% endfor %}
                </td>
                <td>{{ category.author }}</td>
                <td>{{ category.updated }}</td>
                <td>{{ category.createdOn ? category.createdOn|date('Y-m-d') : '' }}</td>
                <td>{{ category.updatedOn ? category.updatedOn|date('Y-m-d') : '' }}</td>
                <td>
                                        <a href="{{ path('app_categories_edit', {'id': category.id}) }}"><button class="btn btn-outline-success btn-border"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i></button></a>
                                        <a href="{{ path('app_categories_index') }}"><button class="btn btn-soft-danger btn-border" data-bs-toggle="modal" data-bs-target="#topmodal"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i></button>
                                            <div id="topmodal" class="modal fade" tabindex="-1" style="display: none;" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-body text-center p-5">
                                                            <lord-icon src="https://cdn.lordicon.com/pithnlch.json" trigger="loop" colors="primary:#121331,secondary:#08a88a" style="width:120px;height:120px">
                                                            </lord-icon>
                                                            <div class="mt-4">
                                                                <h3 class="mb-3">Information Message</h3>
                                                                <p class="text-muted mb-4">You are deleting this Category.This action is irreversible.Are you sure?</p>
                                                                <div class="hstack gap-2 justify-content-center">
                                                                    <a href="javascript:void(0);" class="btn btn-link link-success fw-medium" data-bs-dismiss="modal"><i class="ri-close-line me-1 align-middle"></i> Cancel</a>
                                                                    <a href="javascript:void(0);" class="btn btn-success">Validate</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div><!-- /.modal-content -->
                                                </div><!-- /.modal-dialog -->
                                            </div>
                                        </a>
                                        <a href="{{ path('app_categories_show', {'id': category.id}) }}"><button class="btn btn-outline-secondary btn-border"> <i class="ri-eye-fill align-bottom me-2 text-muted"></i></button></a>
             </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
